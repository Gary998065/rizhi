page{ background: linear-gradient(#def5fd , #c3edfc );}
.header {
  width: 100%;
  text-align: center;
}
.header image{
  width:320px;
  height: 180px;
}
.wrap{
  position:relative;
  font-size:14px;
  color: #666;
  background: #FFF;
  opacity: 0.88;
  margin: -5px 15px 0 15px;
  padding: 10px;
  min-height: 320px;
  border-radius: 5px;
}
.hr{
  margin: 10px 0;
  color: #cb9344;
  font-size: 16px;
  text-align: center;
  position: relative;
}
.hr:before{
  content: "";
  position: absolute;
  width:80px;
  left: 20px;
  top: 8px;
  height: 2px;
  background:linear-gradient(270deg, rgb(203, 147, 68), rgba(203, 147, 68, 0));
}
.hr:after{
  content: "";
  position: absolute;
  width:80px;
  right: 20px;
  top: 8px;
  height: 2px;
  background:linear-gradient(90deg, rgb(203, 147, 68), rgba(203, 147, 68, 0));
}
.tip{text-align: center;font-size: 12px;color: #999;display: block;margin-top: 10px;}
.tip span{color: #0ae;}
.suportors{padding:0 10px; }
.suportors li{list-style: none;display:inline-block; }
.suportors image{width: 40px;height: 40px;display: inline-block;margin-right:10px;margin-top:5px;border-radius: 40px;}
.btn_share{position: absolute;bottom: 10px;text-align: center;width: 100%;left: 0;}
.btn1, .btn2{
	display: inline-block;
	width: 196px;
	height: 44px;
	line-height: 44px;
	color: #FFF;
	font-size: 18px;
	border-radius: 5px;
	text-align: center;
  margin: auto;
}
.btn1{
	margin-top: 22px;
	background-color: #0ae;
}
.btn2{
	margin-top: 12px;
	border: 1px solid #6A6B6D;
}
.btn1.true{background:#ccc !important;}
